<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.LoginRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_loginregister_inactive">

            <TextView

                android:id="@+id/tv_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Login"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Register"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_loginregister_active" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_username"
            android:hint="User Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_edt_active"
            android:layout_below="@+id/ll"/>
        <EditText
            android:id="@+id/edt_email"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_edt_active"
            android:layout_below="@+id/edt_username"/>
        <EditText
            android:id="@+id/edt_password"
            android:hint="Pass Word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_edt_active"
            android:layout_below="@+id/edt_email"/>
        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_password"
            android:layout_marginTop="16dp"
            android:text="Register"
            />
    </RelativeLayout>

</RelativeLayout>
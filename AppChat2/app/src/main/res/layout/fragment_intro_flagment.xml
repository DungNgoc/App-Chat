<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.IntroFlagment">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_2"

        />
    <TextView
        android:id="@+id/tv_title"
        android:text="App chat with Firebase"
        android:textColor = "@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity ="center"
        android:layout_height="wrap_content"


        />
    <TextView
        android:id="@+id/tv_description"
        android:layout_below="@+id/tv_title"
        android:text="Make for a App Chat with Database Manager by Firbase make by Dung"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />
    <RelativeLayout
        android:id="@+id/relative_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_skip"
            android:textColor="@color/teal"
            android:text="Skip"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_next"
            android:textColor="@color/teal"
            android:textStyle="bold"
            android:text="Next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"

            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <View
                android:id="@+id/indicator1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_indicator_active" />
            <View
                android:id="@+id/indicator2"
                android:layout_marginLeft="4dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_indicator_inactive"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/indicator1"
                />
            <View
                android:id="@+id/indicator3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_indicator_inactive"
                android:layout_toRightOf="@+id/indicator2" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>